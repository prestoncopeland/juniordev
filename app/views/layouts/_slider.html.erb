<div class="slider-area">
            <div class="slider">
                <div id="bg-slider" class="owl-carousel owl-theme">

                  <div class="item"><%= image_tag('slider-image-4.jpg') %></div>
                  <div class="item"><%= image_tag('slider-image-5.jpg') %></div>
                  <div class="item"><%= image_tag("slider-image-6.jpg") %></div>
                  <div class="item"><%= image_tag("slider-image-7.jpg") %></div>
